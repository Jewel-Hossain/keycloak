<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Foodi</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a asp-controller="Home" asp-action="Index" class="logo">
                        üçî Foodi
                    </a>
                </div>
                <div class="navbar-menu">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Home" asp-action="Menu" class="nav-link">Menu</a>
                        <a asp-controller="Home" asp-action="MyOrders" class="nav-link">My Orders</a>
                        
                        @* Lead and above can see Reports *@
                        @if (User.IsInRole("Head") || User.IsInRole("Admin") || User.IsInRole("Lead"))
                        {
                            <a asp-controller="Home" asp-action="Reports" class="nav-link">üìä Reports</a>
                        }
                        
                        @* Admin and Head can see Admin Panel *@
                        @if (User.IsInRole("Head") || User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">‚öôÔ∏è Admin</a>
                        }
                        
                        <a asp-controller="Account" asp-action="Profile" class="nav-link">Profile</a>
                        <a asp-controller="Sso" asp-action="GoToKeycloak" class="btn-keycloak">üîê Go to Keycloak</a>
                        <span class="nav-user">Hello, @User.Identity.Name!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn-logout">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="btn-primary">Sign Up</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning">
                @TempData["Warning"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                @TempData["Error"]
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Foodi - Delicious Food Delivery | <a asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            <p class="sso-info">üîê SSO Enabled with Keycloak</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

