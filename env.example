# Keycloak Email OTP Setup

## Environment Variables
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloak123
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_HTTP_ENABLED=true
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# Email Configuration
KC_SPI_EMAIL_DEFAULT_FROM=noreply@localhost
KC_SPI_EMAIL_DEFAULT_REPLY_TO=noreply@localhost
KC_SPI_EMAIL_DEFAULT_FROM_DISPLAY_NAME=Keycloak

# SMTP Configuration for MailHog (Development)
KC_SPI_EMAIL_SMTP_HOST=mailhog
KC_SPI_EMAIL_SMTP_PORT=1025
KC_SPI_EMAIL_SMTP_SSL=false
KC_SPI_EMAIL_SMTP_STARTTLS=false

# SMTP Configuration for Production (uncomment and configure)
# KC_SPI_EMAIL_SMTP_HOST=smtp.gmail.com
# KC_SPI_EMAIL_SMTP_PORT=587
# KC_SPI_EMAIL_SMTP_USERNAME=your-email@gmail.com
# KC_SPI_EMAIL_SMTP_PASSWORD=your-app-password
# KC_SPI_EMAIL_SMTP_SSL=true
# KC_SPI_EMAIL_SMTP_STARTTLS=true
